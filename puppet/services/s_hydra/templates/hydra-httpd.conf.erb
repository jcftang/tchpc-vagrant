# This is for external access 

<VirtualHost _default_:80>
  ServerName  <%= fqdn %>
  ServerAlias <%= fqdn %>

  DocumentRoot <%= doc_root %>

  <Directory <%= doc_root %>>

    AllowOverride all
    Options -MultiViews
    Order allow,deny
    Allow from all

  </Directory>

</VirtualHost>

