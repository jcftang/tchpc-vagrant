NameVirtualHost *:80

# Redirect to fully-qualified URLs by default
<VirtualHost *:80>
    ServerName <%= hostname %>
    Redirect / http://<%= real_canonical_www_name %>/
</VirtualHost>

<VirtualHost *:80>
    ServerName <%= real_canonical_www_name %>
    <IfModule mod_rewrite.c>
        RewriteEngine on
        RewriteOptions inherit
    </IfModule>
</VirtualHost>
