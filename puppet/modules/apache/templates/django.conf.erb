# Use default WSGI daemon process to serve Django apps in standard location
<Directory "/var/www/django/*/wsgi">
    WSGIProcessGroup default
</Directory>

# Serve media for Django admin sites
Alias /django/media/ <%= python_sitedir %>/django/contrib/admin/media/
<Directory "<%= python_sitedir %>/django/contrib/admin/media">
    Order Allow,Deny
    Allow from all
</Directory>
